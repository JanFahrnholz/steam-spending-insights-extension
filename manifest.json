{
  "manifest_version": 3,
  "name": "Steam Spending Insights",
  "version": "1.1",
  "description": "Analyze your Steam purchase history with detailed statistics, charts, and filters",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://store.steampowered.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://store.steampowered.com/account/history",
        "https://store.steampowered.com/account/history/",
        "https://store.steampowered.com/account/history/*"
      ],
      "js": ["content.js"],
      "css": ["dashboard.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["chart.min.js", "chart-renderer.js"],
      "matches": ["https://store.steampowered.com/*"]
    }
  ]
}
